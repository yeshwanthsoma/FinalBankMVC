@model  BusinessLayer.Manager
@{
    ViewBag.Title = "ManageManager";
}

<h2>ManageManager</h2>
<div class="jumbotron d-inline-block" style=" margin-top: 100px">
    @using (Html.BeginForm())
    {
        <div class="input-group mb-3">
            <label id="Label1" class="input-group-text input-group-append">manager id </label>
            @Html.EditorFor(model => model.managerId)
        </div>
        <div>
            <button type="submit" class="btn btn-outline-dark">Submit</button>
        </div>
        <label id="Label2"></label>
        <div class="table-responsive col-10">
            @if (@Model != null)
            {
                <table border="1" style="font-family:Arial" class="table table-hover table-striped">
                    <tr>
                        <th>ManagerId</th>
                        <th>ManagerName</th>
                        <th>Address</th>
                        <th>PhoneNo</th>
                        <th>Email Id</th>
                        <th>Branch Id</th>
                    </tr>
                    <tr>
                        <td>
                            @Model.managerId
                        </td>
                        <td>
                            @Model.managerName
                        </td>
                        <td>
                            @Model.address
                        </td>
                        <td>
                            @Model.phoneNo
                        </td>
                        <td>
                            @Model.userId
                        </td>
                        <td>
                            @Model.branchId
                        </td>
                    </tr>
                </table>
            }

        </div>
    }
    <div class="btn btn-group">
        <label id="message"></label>
        <div class="btn btn-group">
            @if (@Model == null)
            {
                <button id="showAllManagersBtn" onclick="location.href='@Url.Action("ManagersList","SuperManager")'" class="btn btn-outline-info">Show all</button>
                <button id="add" onclick="location.href='@Url.Action("AddManager","SuperManager")'" class="btn btn-outline-success">Add</button>
            }
            else
            {
                <button id="edit" onclick="location.href='@Url.Action("EditManager", "SuperManager", new  { id= @ViewBag.mgrId} )'" class="btn btn-outline-dark">Edit</button>
                <button id="delete" onclick="location.href='@Url.Action("DeleteManager", "SuperManager", new { id = @ViewBag.mgrId })'" class="btn btn-outline-danger">Delete</button>
            }

        </div>
    </div>

</div>
