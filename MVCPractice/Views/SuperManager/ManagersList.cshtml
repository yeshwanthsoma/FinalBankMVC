
@{
    ViewBag.Title = "ManagersList";
}


@model  IEnumerable<BusinessLayer.Manager>


@{
    ViewBag.Title = "Managers";
}

<h2>ManagersList</h2>
<div class="jumbotron d-inline-block" style=" margin-top: 100px">
   
    <label id="message"></label>
    <div class="table-responsive">
        <div>

            <table border="1" style="font-family:Arial" class="table table-hover table-striped">
                <tr>
                    <th>Manager Id</th>
                    <th>Manager Name</th>
                    <th>Branch Id</th>
                </tr>

                @foreach (BusinessLayer.Manager manager in @Model)
                {
                    <tr>

                        <td>
                            @manager.managerId
                        </td>
                        <td>
                           @manager.managerName

                        </td>
                        <td>
                           @manager.branchId
                        </td>
                    </tr>

                }

            </table>
            <br />

        </div>


    </div>
    <button id="add" onclick="location.href='@Url.Action("addManager","SuperManager")'" class="btn btn-outline-success">Add</button>
    <button id="back" onclick="location.href='@Url.Action("ManageManager","SuperManager")'" class="btn btn-outline-success">Back</button>
</div>