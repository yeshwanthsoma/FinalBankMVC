
@model  IEnumerable<BusinessLayer.Account>





    <div class="jumbotron d-inline-block" style=" margin-top: 100px">
        <div>
            <h1>  <Label ID="Role" Text="Label"></Label></h1>
        </div>
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
                <div>
                    
                    <table border="2" style="font-family:Arial" class="table table-hover table-striped">
                        <tr>
                            <th> </th>
                            <th>AccountNumber</th>
                            <th>AccountType</th>
                            <th>Status</th>
                        </tr>

                        @foreach (BusinessLayer.Account account in @Model)
                        {
                            <tr>
                                <td>
                                    @Html.RadioButton("selectedAccount", account.accountNo)
                                </td>
                                <td>
                                    @account.accountNo
                                   
                                </td>
                                <td>
                                    @account.accountType
                                </td>
                                <td>
                                    @account.status
                                </td>
                            </tr>

                        }

                    </table>
                    <br />
                    <input type="submit" class="btn btn-outline-secondary" value="submit" />
                </div>
            }
        </div>
    </div>
